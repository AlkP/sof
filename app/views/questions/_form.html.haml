%hr
= form_for @question, html: { role: 'form', class: 'form-horizontal' } do |f|
  %div.form-group
    %label.col-sm-2.control-label
      Title
    %div.col-sm-10
      = f.text_field :title, autofocus: true, class: 'form-control'
  %div.form-group
    %label.col-sm-2.control-label
      Body
    %div.col-sm-10
      = f.text_field :body, class: 'form-control'
  %div.form-group
    %div.col-sm-offset-2.col-sm-10
      = render 'button'
%hr