%tr
  %td
    = link_to question.title,
          question_path(question.id)
  %td
    = question.body
  %td
    = link_to 'Edit',
        edit_question_path(question.id)
    = link_to 'Delete',
        question_path(question.id),
        :method => :delete,
        :data => { :confirm => t('.confirm') }