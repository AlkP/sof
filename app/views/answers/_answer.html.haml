%tr
  %td
    = answer.body
  %td
    - if current_user&.author_of?(answer)
      = link_to 'edit',
          edit_answer_path(answer),
          :remote => true
  %td
    - if current_user&.author_of?(answer)
      = link_to 'del',
          answer_path(answer),
          :method => :delete,
          :data => { :confirm => 'Are you sure?' }